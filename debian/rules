#!/usr/bin/make -f

PLUGIN_NAME=phpvirtualbox

clean:
	dh_testdir
	dh_testroot
	dh_clean

install:
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	dh_install
	patch $(CURDIR)/debian/${PLUGIN_NAME}/usr/share/${PLUGIN_NAME}/js/phptest.php $(CURDIR)/patches/fix-missing-header-in-phptest.patch

binary-indep: install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdebconf
	dh_lintian
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-arch:
# We have nothing to do by default.

build:
# We have nothing to do by default.

binary: binary-indep binary-arch
.PHONY: clean binary-indep binary-arch binary install
